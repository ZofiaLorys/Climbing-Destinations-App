{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_list'|trans }}
{% endblock %}

{% block body %}
    <h1 class="display-4 pt-3 pb-3">{{ 'title.user_list'|trans }}</h1>
    {% if pagination is defined and pagination|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{  'label.fullname'|trans }}</th>
                <th>{{  'label.email'|trans }}</th>
                <th>{{ 'action.edit'|trans }}</th>
                <th>{{ 'action.delete'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.fullName }}</td>
                    <td>{{ user.email }}</td>


                    <td>
                        <a href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'action.change_roles'|trans }}">
                            {{ 'action.change_roles'|trans }}
                        </a>
                    </td>
                    <td>
                        {% if not user.destinations|length %}
                            <a href="{{ url('user_delete', {id: user.id}) }}" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>

                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}

{% endblock %}