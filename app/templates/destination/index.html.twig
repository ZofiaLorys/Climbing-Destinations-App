{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.destination_list'|trans }}
{% endblock %}

{% block body %}
    <h1 class="display-4 pt-3 pb-3">{{ 'title.destination_list'|trans }}</h1>
    {% if pagination is defined and pagination|length %}

        <div class="navigation text-center pagination">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped table-destinations">
            <thead class="bg-info text-white">
            <tr>
                <th  class="text-center" scope="col">{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'destinationTable.id') }}</th>
                <th  class="text-center" scope="col">{{ knp_pagination_sortable(pagination, 'label.country'|trans, 'countryTable.title') }}</th>
                <th  class="text-center" scope="col">{{ knp_pagination_sortable(pagination, 'label.destination'|trans, 'destinationTable.title') }}</th>
                <th  class="text-center" scope="col">{{ knp_pagination_sortable(pagination, 'label.author'|trans, 'author')  }}</th>
                <th  class="text-center" scope="col">{{ knp_pagination_sortable(pagination, 'label.average-ranking'|trans, 'average') }}</th>
                <th  class="text-center" scope="col">{{ 'action.view'|trans }}</th>
                <th  class="text-center"  scope="col">{{ 'label.new-grade'|trans }}</th>
                <th  class="text-center" scope="col">{{ 'action.edit'|trans }}</th>
                <th  class="text-center" scope="col">{{ 'action.delete'|trans }}</th>
            </tr>
            </thead>
            <tbody>

            {% for destination in pagination %}
                <tr>
                    {# version with query all function
                    <td>{{ destination.id }}</td>
                    <td>{{ destination.country.title }}</td>
                    <td>{{ destination.title }}</td>
                    <td>{{ destination.description }}</td>
                    <td>{{ destination.author.fullName }}</td>
                    <td>average-ranking</td>

                   #}

                    <td  class="text-center">{{ destination.id }}</td>
                    <td  class="text-center">{{ destination.country }}</td>
                    <td  class="text-center">{{ destination.title }}</td>
                    <td  class="text-center">{{ destination.author }}</td>
                    <td  class="text-center">{{ destination.average|number_format(1, '.', ',') }}</td>

                    <td  class="text-center">
                        <a href="{{ url('destination_view', {id: destination.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                    <td  class="text-center">

                            <a  href="{{ url('ranking_new', {destination_id: destination.id}) }}" title="{{ 'action.ranking_new'|trans }}">
                                {{ 'action.ranking_new'|trans }}
                            </a>


                    </td>
                    <td  class="text-center">


                        {% if (destination.email == app.user.email or is_granted('ROLE_ADMIN'))  %}
                            <a href="{{ url('destination_edit', {id: destination.id}) }}" title="{{ 'action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>

                        {% endif %}
                    </td>
                    <td  class="text-center">
                        {% if destination.email == app.user.email or is_granted('ROLE_ADMIN') %}
                            <a href="{{ url('destination_delete', {id: destination.id}) }}" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                        {% endif %}

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}

{% endblock %}